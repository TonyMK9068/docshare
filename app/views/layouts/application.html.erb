<!DOCTYPE html>
<html>
  <head>
    <title>DocShare</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= csrf_meta_tags %>
  </head>

<body>
<div class="row flash">  
  <% if flash[:notice] %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
    <button type="button" class="close">Dismiss</button>
  </div>
  <% elsif flash[:error] %>
  <div class="alert alert-error">
    <%= flash[:error] %>
    <button type="button" class="close">Dismiss</button>
  </div>
  <% elsif flash[:alert] %>
  <div class="alert">
    <%= flash[:alert] %>
    <button type="button" class="close">Dismiss</button>
  </div>
  <% end %>
</div>
<div class="container">
  <% if current_user %>
  <div class="twelve columns offset-by-four row">

  <ul> 
    <li class="nav-tab two columns"><%= link_to "home", pages_path, class: "home nav-link" %></li>
    <li class="nav-tab two columns"><%= link_to "about", about_path, class: "about nav-link" %></li>
    <li class="nav-tab two columns"><%= link_to "new page", new_page_path, class: "nav-link" %></li>
    <li class="nav-tab two columns account"><%= link_to "acount", '#', class: "nav-link" %>
      <div id="account-options" class="hidden">
        <ul>
        <li class="two columns dropdown"><%= link_to "log out", destroy_user_session_path, method: :delete, class: "nav-link logout" %></li>
        <li class="two columns dropdown"><%= link_to "settings", edit_user_registration_path, class: "nav-link settings" %>
        </li>
        </ul>
      </div>

    </li>
  </ul>
  </div>
  <% else %>
  <div class="twelve columns offset-by-four row">
  <ul>
      <li class="two columns"><%= link_to "home", root_path, class: "home nav-link" %></li>
      <li class="two columns"><%= link_to "about", about_path, class: "about nav-link" %></li>
      <li class="two columns"><%= link_to "sign up", new_user_registration_path, class: "sign-up nav-link" %></li>
      <li class="two columns"><%= link_to "sign in", new_user_session_path, class: "sign-in nav-link" %></li>
  </ul>
  </div>
  <% end %>

<div class="insert sixteen columns">
  <%= yield %>
  </div>
</div>

<%= javascript_include_tag "application" %>


</body>

</html>
