<!DOCTYPE html>
<html>

<head>
  <title>DocShare</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>

<body>
<div class="row flash">  
  <% if flash[:notice] %>
  <div class="alert alert-info">
    <%= flash[:notice] %>
    <button type="button" class="close">Dismiss</button>
  </div>
  <% elsif flash[:error] %>
  <div class="alert alert-error">
    <%= flash[:error] %>
    <button type="button" class="close">Dismiss</button>
  </div>
  <% elsif flash[:alert] %>
  <div class="alert">
    <%= flash[:alert] %>
    <button type="button" class="close">Dismiss</button>
  </div>
  <% end %>
</div>

<div class="container">
    <div class="nav">
      <% if can? :create, Page %>
        <div class="nav-tab left"><%= link_to "Home", pages_path, class: "home nav-link" %></div>
        <div class="nav-tab left"><%= link_to "About", about_path, class: "about nav-link" %></div>
        <div class="nav-tab left"><%= link_to "New Page", new_page_path, class: "nav-link" %></div>
        <div class="account"><%= link_to "Acount", '#', class: "nav-link" %>
        <div class="hidden"><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
        <%= link_to "Settings", edit_user_registration_path, class: "nav-link" %> </div>
          </div>
      <% else %>
        <div class="nav-tab left"><%= link_to "Home", root_path, class: "home nav-link" %></div>
        <div class="nav-tab left"><%= link_to "About", about_path, class: "about nav-link" %></div>
        <div class="nav-tab right"><%= link_to "Sign up", new_user_registration_path, class: "sign-up nav-link" %></div>
        <div class="nav-tab right"><%= link_to "Sign In", new_user_session_path, class: "sign-in nav-link" %></div>
      <% end %>
    </div>



<div class="pages">
<%= yield %>
</div>
</div>

<%= javascript_include_tag "application" %>
</body>

</html>
