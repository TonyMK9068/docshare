<!DOCTYPE html>
<html>

<head>
  <title>DocShare</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>

<body>


<div class="container">

    <div class="nav">
    <ul class>
      <li class="nav-tab left"><%= link_to "Home", root_path, class: "home nav-link" %></li>
      <li class="nav-tab left"><%= link_to "About", about_path, class: "about nav-link" %></li>

      <li class="nav-tab left"><%= link_to "New Page", new_page_path, class: "nav-link" %></li>
      <li class="nav-tab right"><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "log-out nav-link" %></li>
      <li class="nav-tab right"><%= link_to "Sign up", new_user_registration_path, class: "sign-up nav-link" %></li>
      <li class="nav-tab right"><%= link_to "Sign In", new_user_session_path, class: "sign-in nav-link" %></li>
    </ul>
    </div>

  <div class="row flash">  
    <% if flash[:notice] %>
    <div class="alert alert-info">
      <%= flash[:notice] %>
    </div>
    <% elsif flash[:error] %>
    <div class="alert alert-error">
      <%= flash[:error] %>
    </div>
    <% elsif flash[:alert] %>
    <div class="alert">
      <%= flash[:alert] %>
    </div>
    <% end %>
  </div>


<%= yield %>
</div>
<%= javascript_include_tag "application" %>
</body>

</html>
