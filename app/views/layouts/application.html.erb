<!DOCTYPE html>
<html>

  <head>
    <title>DocShare</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= yield :head %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- Flash Messages -->
    <% if flash[:notice] %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
        <button type="button" class="close">Dismiss</button>
      </div>
    <% elsif flash[:error] %>
      <div class="alert alert-error">
        <%= flash[:error] %>
        <button type="button" class="close">Dismiss</button>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert">
        <%= flash[:alert] %>
        <button type="button" class="close">Dismiss</button>
      </div>
    <% end %>

    <!-- Nav Bar -->
    <div class="container">

      <% if current_user %>
        <div class="sixteen columns nav-bar">
          <ul class="nav-inner ten columns offset-by-three"> 
            <li class="nav-tab two columns"><%= link_to "home", pages_path, class: "home nav-link" %></li>
            <li class="nav-tab two columns"><%= link_to "about", about_path, class: "about nav-link" %></li>
            <li class="nav-tab two columns"><%= link_to "new page", new_page_path, class: "nav-link" %></li>
            <li class="nav-tab two columns account"><%= link_to "account", '#', class: "nav-link" %> </li>
              <div id="account-options" class="hidden two columns">
                <%= link_to "log out", destroy_user_session_path, method: :delete, class: "drop-down-link logout" %>
                <%= link_to "settings", edit_user_registration_path, class: "drop-down-link settings" %>
              </div>

          </ul>
        </div>

      <% else %>
        <div class="sixteen columns nav-bar">
          <ul class="nav-inner ten columns offset-by-three"> 
            <li class="nav-tab two columns"><%= link_to "home", root_path, class: "home nav-link" %></li>
            <li class="nav-tab two columns"><%= link_to "about", about_path, class: "about nav-link" %></li>
            <li class="nav-tab two columns"><%= link_to "sign up", new_user_registration_path, class: "sign-up nav-link" %></li>
            <li class="nav-tab two columns"><%= link_to "sign in", new_user_session_path, class: "sign-in nav-link" %></li>
          </ul>
        </div>

      <% end %>
    </div>
    <!-- End of layout -->
    <div class="container insert">
      <%= yield %>
    </div>

  <%= javascript_include_tag "application" %>
</body>
</html>
